{
  "compilerOptions": {
    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESnext",
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,

    /* Bundling options */
    "noEmit": true,
    "moduleResolution": "Bundler",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,

    "lib": ["ESNext", "dom", "dom.iterable"]
  },
  "include": ["src/**/*"]
}
